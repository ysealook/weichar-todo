.todo-checkbox{
  width: 50rpx;
}
.todo-item{
  /* border-bottom: 1px #dcdee2 solid; */
  margin: 20rpx 0;
  padding: 10rpx 12rpx;
}
.todo-time{
  color: #fff;
  padding: 6rpx 30rpx;
  display: inline-block;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.4);
  font-size: .6rem;
}
.todo-card{
  display: flex;
  margin-top:26rpx;
  box-shadow:0px 0px 2px 1px rgba(0, 0, 0, 0.1);
  padding:10rpx 12rpx;
  border-radius: 4px;
}
.todo-main{
  flex-grow: 6;
}
.todo-content{
  color:#666;
  padding: 10rpx 0;
}
.unfinished-todo .todo-card{
  box-shadow:0px 0px 2px 1px #ff9900;
}
.todo-tag{
  display: flex;
  font-size: .6rem;
  align-items: center;
  color:#515a6e;
}
.tag-dot{
  width:20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #333;
  margin-right: 10rpx;
}
.finished-todo {
  color:#dad4d4;
}
